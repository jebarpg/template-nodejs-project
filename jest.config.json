{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["./src/**"],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "lines": 90
    }
  },
  "coverageProvider": "v8",
  "extensionsToTreatAsEsm": [".ts"],
  "testTimeout": 20000,
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.ts?$": [
      "ts-jest",
      {
        "useESM": true,
        "isolatedModules": true
      }
    ]
  },
  "verbose": true,
  "preset": "ts-jest",
  "testEnvironment": "node"
}
